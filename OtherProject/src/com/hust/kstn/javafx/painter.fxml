<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane xmlns="http://javafx.com/javafx/25.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.hust.kstn.javafx.PainterController"
            prefHeight="400.0" prefWidth="600.0">

    <children>

        <!-- Khu vực vẽ -->
        <Pane fx:id="drawingAreaPane"
              layoutX="20"
              layoutY="20"
              prefWidth="560"
              prefHeight="300"
              style="-fx-background-color: white; -fx-border-color: black;"
              onMouseDragged="#drawingAreaMouseDragged"/>

        <!-- Nhóm chọn bút / tẩy -->
        <RadioButton fx:id="penButton"
                     layoutX="20"
                     layoutY="340"
                     text="Pen"
                     selected="true">
            <toggleGroup>
                <ToggleGroup fx:id="toolGroup"/>
            </toggleGroup>
        </RadioButton>

        <RadioButton fx:id="eraserButton"
                     layoutX="100"
                     layoutY="340"
                     text="Eraser"
                     toggleGroup="$toolGroup"/>

        <!-- Nút xóa -->
        <Button layoutX="200"
                layoutY="335"
                text="Clear"
                onAction="#clearButtonPressed"/>

    </children>

</AnchorPane>
